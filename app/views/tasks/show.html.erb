<div class="container">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>

  <p><%=link_to "Do you want to edit this task? ✍🏽", edit_task_path %></p>
  <p><%=link_to "Back to all tasks! 🔙", tasks_path %></p>
  <%= link_to "Delete task 🗑",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this?" } %>
</div>
